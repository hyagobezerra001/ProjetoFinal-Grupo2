<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceBlock name="logo">
        <arguments>
            <argument name="logo_width" xsi:type="number">142</argument>
            <argument name="logo_height" xsi:type="number">74</argument>
            <argument name="logo_file" xsi:type="string">images/wineclub.png</argument>
        </arguments>
    </referenceBlock>

    <referenceBlock name= "footer_links" remove="true"></referenceBlock>

    <referenceContainer name="footer-container">
        <container name="footer-links" htmlTag="div" htmlClass="footer-links">
            <block class="Magento\Cms\Block\Block" name="link4" before="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-link4</argument>
                </arguments>
            </block>

            <block class="Magento\Cms\Block\Block" name="link1" after="link4">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-link1</argument>
                </arguments>
            </block>

            <block class="Magento\Cms\Block\Block" name="link2" after="link1">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-link2</argument>
                </arguments>
            </block>

            <block class="Magento\Cms\Block\Block" name="link3" after="link2">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-link3</argument>
                </arguments>
            </block>
        </container>
    </referenceContainer>    
</page>
